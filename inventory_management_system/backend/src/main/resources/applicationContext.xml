<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
        xmlns:context="http://www.springframework.org/schema/context" 
        xsi:schemaLocation= "http://www.springframework.org/schema/beans 
        					 http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           					http://www.springframework.org/schema/context 
           					http://www.springframework.org/schema/context/spring-context-3.1.xsd
           					http://www.springframework.org/schema/aop 
           					http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<aop:aspectj-autoproxy/>

	<bean id = "shapeService" class="com.tap.backend.service.aop.ShapeService" autowire="byName"> 
	</bean>
	
	<bean id = "triangle" class="com.tap.backend.aop.Triangle">
		<property name="name"  value="Triangle-Name"></property>
	</bean>
	
	<bean id = "circle" class="com.tap.backend.aop.Circle">
		<property name="name"  value="Circle-Name"></property>
	</bean>
	
	<context:component-scan base-package="com.tap.backend.aop." />
	<bean class="com.tap.backend.aop.LogingAspect"></bean>
	
</beans>